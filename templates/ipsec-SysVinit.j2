# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Manages IPsec service.
# Description:       Wraps ipsec command line interface to a service.
### END INIT INFO

{{ ansible_managed|comment }}

case "$1" in
    start)
        ipsec start
        ;;
    restart|force-reload)
        ipsec restart
        ;;
    reload)
        ipsec update
        ;;
    stop)
        ipsec stop
        ;;
    status)
        ipsec status
        ;;
    *)
        echo "Usage: $0 {status|start|restart|reload|force-reload|stop}"
        exit 1
esac
